<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <!-- 填充-->
            <solid android:color="#8d000000"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#f7cd3a"/>
            <!-- 圆角 -->
            <!--<corners-->
                <!--android:radius="3dp" />-->
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <!-- 填充-->
            <solid android:color="#8dFFFFFF"/>
            <!-- 描边 -->
            <stroke
                android:width="1dp"
                android:color="#f7cd3a"/>
            <!-- 圆角 -->
            <corners
                android:radius="3dp" />
        </shape>
    </item>

    <item>
        <shape>
            <solid android:color="#8dffffff"/>
            <stroke
                android:width="1dp"
                android:color="#f7cd3a" />
        </shape>
    </item>
</selector>
