<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/talent_violet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Title -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tv_talentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textSize="@dimen/live_size_16sp"
                android:text="Talents"/>

        </RelativeLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:background="@drawable/live_divider_talent_list"/>

        <!-- contant -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/live_size_180dp">
            <!-- List -->
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_talentList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="13dp"
                android:paddingRight="13dp"
                android:overScrollMode="never"
                />

            <!-- loading -->
            <com.qpidnetwork.livemodule.view.MaterialProgressBar
                android:id="@+id/loading"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:visibility="gone"
                app:matProg_barColor="@color/blue_color"
                app:matProg_progressIndeterminate="true" />

            <!-- 出错界面　-->
            <LinearLayout
                android:id="@+id/ll_talentEmpty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone"
                android:gravity="center">
                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_data_empty"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white_text_70"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/live_size_14sp"
                    android:text="@string/tip_failed_to_load"/>
                <Button
                    android:id="@+id/btn_talentReload"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:text="@string/tip_reload"
                    android:layout_marginTop="10dp"
                    android:textSize="@dimen/live_size_14sp"
                    android:textColor="@color/black_text_54"
                    android:background="@drawable/rectangle_rounded_angle_white_bg"/>

            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

</FrameLayout>
