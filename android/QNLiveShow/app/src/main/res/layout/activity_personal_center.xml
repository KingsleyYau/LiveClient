<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--My Reservations-->
    <LinearLayout
        android:id="@+id/llInvite"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/u13"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="My Reservations"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:id="@+id/tvInviteUnread"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_custom_red_circle"
            android:text="5"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/btnCenter"
            android:layout_alignTop="@+id/btnCenter" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"/>

    <!--My Package-->
    <LinearLayout
        android:id="@+id/llBackPack"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/u18"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="My Backpack"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:id="@+id/tvPackageUnread"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:background="@drawable/bg_custom_red_circle"
            android:textSize="10sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_alignRight="@+id/btnCenter"
            android:layout_alignTop="@+id/btnCenter" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"/>

    <!--My Level-->
    <LinearLayout
        android:id="@+id/llMyLevel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/u23"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="My Level"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"/>
        <TextView
            android:id="@+id/tvLevelDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LV.1"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_alignRight="@+id/btnCenter"
            android:layout_alignTop="@+id/btnCenter" />
    </LinearLayout>
    <!--Test-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"/>
    <LinearLayout
        android:id="@+id/llTest"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_data_empty"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Test才艺"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

    <!--Test2-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"/>
    <LinearLayout
        android:id="@+id/llTest2"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:gravity="center_vertical"
        android:clickable="true"
        android:onClick="onClick">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/icon_data_empty"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Test预约"
            android:textSize="18sp"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C9C9C9"/>
</LinearLayout>
