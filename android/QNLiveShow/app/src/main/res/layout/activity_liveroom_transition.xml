<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_liveroom_transition">

    <Button
        android:id="@+id/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_clear_disabled"
        android:layout_gravity="right|top"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"/>

    <LinearLayout
        android:id="@+id/llOperateAera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="center_horizontal"
        android:layout_marginTop="136dp">
        <com.qpidnetwork.livemodule.framework.widget.circleimageview.CircleImageView
            android:id="@+id/civPhoto"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_default_photo_woman"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:id="@+id/tvAnchorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marry"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:singleLine="true"
            android:ellipsize="middle"
            android:layout_marginLeft="48dp"
            android:layout_marginRight="48dp"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="32dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="Broadcast has been ended.Please come again later."
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:visibility="visible"/>
        <!--倒计时-->
        <LinearLayout
            android:id="@+id/llCountDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="36dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/tvCountDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="#04EDF6"
                android:text="30"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:textColor="#04EDF6"
                android:text="S"
                android:layout_marginLeft="8dp"/>
        </LinearLayout>

        <!--按钮区域-->
        <LinearLayout
            android:id="@+id/llButtonContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="48dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/btn_double"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_yes"
                android:layout_marginBottom="16dp"
                android:visibility="visible"/>
            <Button
                android:id="@+id/btn_single"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_yes"
                android:layout_marginTop="16dp"
                android:visibility="gone"/>
        </LinearLayout>

        <!--推荐区域-->
        <LinearLayout
            android:id="@+id/llRecommand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:singleLine="true"
                android:ellipsize="middle"
                android:text="Recommanded Broadcasters"
                android:textSize="15sp"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="22dp">
                <com.qpidnetwork.livemodule.framework.widget.circleimageview.CircleImageView
                    android:id="@+id/civRecommand1"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_default_photo_woman"
                    android:layout_centerHorizontal="true" />
                <com.qpidnetwork.livemodule.framework.widget.circleimageview.CircleImageView
                    android:id="@+id/civRecommand2"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:src="@drawable/ic_default_photo_woman"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="32dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <com.qpidnetwork.livemodule.view.MaterialProgressBar
        android:id="@+id/pbLoading"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="center"
        wheel:matProg_barColor="@color/blue_color"
        wheel:matProg_progressIndeterminate="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="56dp"
        android:visibility="gone"/>
    
    <ProgressBar
        android:id="@+id/pb_waiting"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:visibility="gone"
        android:layout_marginBottom="60dp"
        android:scrollbarStyle="insideInset"
        android:indeterminateDrawable="@drawable/live_loading_progress"
        android:indeterminateBehavior="repeat"
        android:indeterminateDuration="1000"
        android:layout_gravity="center_horizontal|bottom"/>
    
</FrameLayout>
