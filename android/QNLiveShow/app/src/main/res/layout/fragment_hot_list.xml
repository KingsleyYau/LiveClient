<com.qpidnetwork.livemodule.framework.widget.swipetoloadlayout.SwipeToLoadLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swipeToLoadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@id/swipe_refresh_header"
        android:visibility="gone"
        layout="@layout/swipetoloadlayout_layout_jd_header" />

    <ListView
        android:id="@id/swipe_target"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@drawable/bg_buttom_line_959595" />

    <include
        android:id="@id/swipe_load_more_footer"
        layout="@layout/swipetoloadlayout_layout_classic_footer" />

</com.qpidnetwork.livemodule.framework.widget.swipetoloadlayout.SwipeToLoadLayout>
