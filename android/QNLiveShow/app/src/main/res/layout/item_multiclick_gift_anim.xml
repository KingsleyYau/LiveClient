<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:background="@drawable/bg_multiclick_item"
    android:gravity="center_vertical"
    android:paddingRight="20dp">

    <com.qpidnetwork.framework.widget.circleimageview.CircleImageView
        android:layout_centerVertical="true"
        android:src="@drawable/circleimageview_hugh"
        android:id="@+id/civ_photo"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="16dp">
        <TextView
            android:id="@+id/tvNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="Johney"/>
        <TextView
            android:id="@+id/tvGiftName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="Apple"
            android:textSize="13sp"/>
    </LinearLayout>
    
    <ImageView
        android:id="@+id/ivGift"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/gift_apple"
        android:layout_marginLeft="16dp"/>

</LinearLayout>
