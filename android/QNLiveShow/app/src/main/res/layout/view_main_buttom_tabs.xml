<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="bottom"
        android:background="@color/bg_MainButtomTabView" />

    <LinearLayout
        android:id="@+id/ll_buttomTabContainer"
        android:visibility="visible"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/ll_mainTab"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_mainTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/selector_main_buttom_tab_main"
                android:layout_marginLeft="30dip" />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/ll_mobileLive"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:onClick="onClick"
            android:visibility="visible"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_mobileLive"
                android:layout_width="48dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_main_buttom_tab_live"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_personCenter"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="visible"
            android:orientation="horizontal"
            android:onClick="onClick"
            android:gravity="center_vertical|right">
            <ImageView
                android:id="@+id/iv_personCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_main_buttom_tab_person"
                android:layout_marginRight="30dip"
                android:layout_alignParentRight="true" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>