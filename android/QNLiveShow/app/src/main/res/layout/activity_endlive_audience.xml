<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_gaussian_blur"/>
    <!--按照标注图的px*2/3得出的dp-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="92dp"
        android:orientation="vertical">


        <com.qpidnetwork.livemodule.framework.widget.circleimageview.CircleImageView
            android:id="@+id/civ_hostIcon"
            android:layout_width="94dp"
            android:layout_height="94dp"
            android:src="@drawable/circleimageview_hugh"/>

        <TextView
            android:id="@+id/tv_hostNickName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Marry"
            android:textColor="#c2c2c2"
            android:textSize="14sp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:id="@+id/ll_opera_userclose"
            android:layout_marginTop="21dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_endLiveTips_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c2c2c2"
                android:textSize="14sp"
                android:text="@string/endlive_tip_1"
                android:gravity="center"/>


            <ImageView
                android:id="@+id/iv_opera_bookPrivate"
                android:layout_width="211dp"
                android:layout_height="33dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/ic_endlive_bookprivate"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_closeEndLive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top|right"
        android:padding="18dp">

        <ImageView
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_disabled"/>

    </LinearLayout>



</FrameLayout>