<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_loginMethodContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.qpidnetwork.view.RespDrawClickEventAutoSplitTextView
        android:id="@+id/rdctv_agreeUserAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:text="@string/txt_userAgreement"
        android:gravity="center_vertical"
        android:drawablePadding="5dp"
        android:textSize="14sp"
        android:drawableLeft="@android:drawable/btn_radio"/>

    <ImageView
        android:id="@+id/iv_mobileLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/rdctv_agreeUserAgreement"
        android:layout_marginBottom="50dp"
        android:background="#eeeeee"
        android:onClick="onClick"
        android:src="@drawable/ic_mobile"/>

    <ImageView
        android:id="@+id/iv_facebookLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#eeeeee"
        android:onClick="onClick"
        android:src="@drawable/ic_facebook"
        android:layout_marginRight="20dp"
        android:layout_alignBottom="@id/iv_mobileLogin"
        android:layout_toLeftOf="@id/iv_mobileLogin"/>

    <ImageView
        android:id="@+id/iv_emailLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#eeeeee"
        android:onClick="onClick"
        android:src="@drawable/ic_webchat"
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@id/iv_mobileLogin"
        android:layout_toRightOf="@id/iv_mobileLogin"/>

    <TextView
        android:id="@+id/tv_nameOfApp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/iv_mobileLogin"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:textSize="18sp"
        android:text="@string/app_name"/>


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/tv_nameOfApp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/ic_main_buttom_tab_live_selected"/>

</RelativeLayout>
