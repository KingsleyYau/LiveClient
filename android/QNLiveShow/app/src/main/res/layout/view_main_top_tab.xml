<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_searchContent"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_search"/>

    <com.qpidnetwork.livemodule.framework.widget.viewpagerindicator.TabPageIndicator
        android:id="@+id/tpi_fragmentIndicator"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="45dp"
        xmlns:custom="http://schemas.android.com/apk/res/com.qpidnetwork.livemodule"
        custom:titleTextColorUnselected="@android:color/black"
        custom:titleTextColorSelected="@android:color/holo_blue_bright"
        custom:tabSelectedBgColor="#b71c1c"
        custom:tabUnselectedBgColor="#FFCDD2"
        custom:titleTextSize="16sp"
        custom:digitalHintTextColor="@android:color/darker_gray"
        custom:digitalHintTextBgColor="@android:color/holo_red_light"
        custom:digitalHintTextSize="12sp"
        custom:hasDigitalHint="true"
        custom:underlineColor="@android:color/holo_blue_bright"
        custom:underlineHeight="2dp"
        custom:indicatorColor="@android:color/holo_orange_dark"
        custom:indicatorHeight="2dp"
        />

    <ImageView
        android:visibility="visible"
        android:layout_gravity="center"
        android:layout_width="30dip"
        android:layout_height="40dp"
        android:background="@drawable/circleimageview_hugh"/>


</LinearLayout>