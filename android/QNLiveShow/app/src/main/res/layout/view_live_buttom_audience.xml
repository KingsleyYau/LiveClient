<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:layout_gravity="bottom">

        <Button
            android:id="@+id/btn_inputMsg"
            android:layout_width="0dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:background="@drawable/bg_live_buttom_input_general"
            android:gravity="center_vertical"
            android:onClick="onClick"
            android:paddingLeft="18dp"
            android:text="@string/txt_hint_input_general"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/iv_userShare"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/selector_live_buttom_audience_share"
            android:onClick="onClick" />

        <ImageView
            android:id="@+id/iv_gift"
            android:layout_width="36dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_live_buttom_gift"
            android:onClick="onClick" />

    </LinearLayout>
</FrameLayout>