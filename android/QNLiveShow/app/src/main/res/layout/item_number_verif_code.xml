<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">
                <TextView
                    android:id="@+id/tv_tipCountry"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="@string/tip_countryOrRegion"
                    android:textColor="@color/txt_color_uninput"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tv_selectedCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:textSize="12sp"
                    android:text=""
                    android:textColor="@color/txt_color_uninput"
                    android:drawableRight="@drawable/ic_arrow_right"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@drawable/bg_buttom_line_959595"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_gravity="bottom">
                <RelativeLayout
                    android:id="@+id/rl_mobileCode"
                    android:onClick="onClick"
                    android:clickable="true"
                    android:background="@drawable/bg_buttom_line_959595"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp">

                        <ImageView
                            android:id="@+id/iv_mobileCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:layout_alignParentLeft="true"
                            android:background="@drawable/ic_mobile"/>

                        <TextView
                            android:id="@+id/tv_countryCode"
                            android:text="+086"
                            android:textSize="15dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="onClick"
                            android:layout_toRightOf="@id/iv_mobileCode"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/txt_color_uninput"
                            android:layout_alignBottom="@id/iv_mobileCode"/>

                </RelativeLayout>

                <EditText
                    android:id="@+id/et_phoneNumber"
                    android:textSize="15dp"
                    android:text=""
                    android:layout_marginLeft="9dp"
                    android:textColor="@color/txt_color_uninput"
                    android:background="@drawable/selector_edittext_buttom_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"/>
        </LinearLayout>

</LinearLayout>
