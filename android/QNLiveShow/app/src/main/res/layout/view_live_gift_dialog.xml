<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_giftDialogContainer"
    android:orientation="vertical"
    android:background="#8d000000"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_height="255dp">

    <LinearLayout
        android:id="@+id/ll_giftPageContainer"
        android:layout_marginBottom="36dip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">
        <com.qpidnetwork.livemodule.framework.widget.viewpagerindicator.TabPageIndicator
            xmlns:custom="http://schemas.android.com/apk/res/com.qpidnetwork.livemodule"
            android:id="@+id/tpi_giftTypeConstainer"
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            custom:titleTextColorUnselected="@android:color/black"
            custom:titleTextColorSelected="@android:color/holo_red_light"
            custom:titleTextSize="16sp"
            custom:hasDigitalHint="false"
            custom:tabSelectedBgColor="#b71c1c"
            custom:tabUnselectedBgColor="#FFCDD2"
            custom:underlineColor="@android:color/holo_blue_bright"
            custom:underlineHeight="2dp"
            custom:indicatorColor="@android:color/holo_orange_dark"
            custom:indicatorHeight="0dp">

        </com.qpidnetwork.livemodule.framework.widget.viewpagerindicator.TabPageIndicator>

        <com.qpidnetwork.livemodule.view.ScrollLayout
            android:id="@+id/sl_giftPagerContainer"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:layout_height="20dp">
        </com.qpidnetwork.livemodule.view.ScrollLayout>

        <LinearLayout
            android:id="@+id/ll_indicator"
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center">
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_giftCount"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="13dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_sendGift"
            android:layout_width="wrap_content"
            android:layout_height="27.5dp"
            android:background="@drawable/selector_live_buttom_gift_send"
            android:gravity="center"
            android:text="@string/txt_send_msg"
            android:textColor="#383838"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_countChooser"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tv_sendGift"
            android:layout_height="27.5dp"
            android:layout_gravity="right"
            android:background="@drawable/bg_live_buttom_gift_count_chooser"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="12.5dp"
            android:paddingRight="12.5dp">

            <TextView
                android:id="@+id/tv_giftCount"
                android:layout_width="wrap_content"
                android:layout_height="27.5dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical|left"
                android:text="50"
                android:textColor="@android:color/white"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_countIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:background="@drawable/selector_live_buttom_gift_count_indicator" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_giftCount"
            android:background="@android:color/transparent"
            android:layout_width="match_parent"
            android:divider="@null"
            android:choiceMode="singleChoice"
            android:layout_marginBottom="2.5dp"
            android:layout_above="@id/ll_countChooser"
            android:layout_alignLeft="@id/ll_countChooser"
            android:layout_alignRight="@id/ll_countChooser"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_giftConstrol"
        android:layout_width="wrap_content"
        android:layout_height="27.5dp"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp">
        <ImageView
            android:id="@+id/iv_userCoin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_live_buttom_gold" />

        <TextView
            android:id="@+id/tv_currGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="7dp"
            android:layout_toRightOf="@id/iv_userCoin"
            android:gravity="center_vertical"
            android:text="123456"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_userCoinRecharge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_currGold"
            android:background="@drawable/ic_live_buttom_arrow_right_coins"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/tv_rewards"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_userCoinRecharge"
            android:text="Rewarded:10501023"
            android:maxEms="7"
            android:singleLine="true"
            android:textSize="14sp"
            android:layout_marginLeft="10dip"
            android:textColor="@android:color/white"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_repeatSendAnim"
        android:layout_width="81dp"
        android:layout_height="78.5dp"
        android:layout_gravity="bottom|right"
        android:background="@drawable/selector_view_repeatsend"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="7dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_timeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center"
            android:text="30"
            android:textColor="#383838"
            android:textSize="28sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_timeCount"
            android:gravity="center"
            android:text="Combo"
            android:textColor="#383838"
            android:textSize="15sp" />
    </LinearLayout>

</FrameLayout>
