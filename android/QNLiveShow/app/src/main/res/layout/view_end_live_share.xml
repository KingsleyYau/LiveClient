<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tv_endLiveShareTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:textColor="#b4a5ff"
        android:text="@string/txt_endlive_shareTitle"/>

    <ImageView
        android:id="@+id/iv_endLiveShareTwitter"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/tv_endLiveShareTitle"
        android:layout_marginTop="14dp"
        android:layout_width="39dp"
        android:onClick="onClick"
        android:layout_height="38.5dp"
        android:layout_marginLeft="22.5dp"
        android:layout_marginRight="22.5dp"
        android:background="@drawable/ic_endlive_share_twitter"/>

    <ImageView
        android:id="@+id/iv_endLiveShareFacebook"
        android:layout_marginTop="14dp"
        android:layout_width="39dp"
        android:layout_height="38.5dp"
        android:onClick="onClick"
        android:layout_toLeftOf="@id/iv_endLiveShareTwitter"
        android:layout_alignBottom="@id/iv_endLiveShareTwitter"
        android:background="@drawable/ic_endlive_share_facebook"/>

    <ImageView
        android:id="@+id/iv_endLiveShareInstagram"
        android:layout_toRightOf="@id/iv_endLiveShareTwitter"
        android:layout_alignBottom="@id/iv_endLiveShareTwitter"
        android:layout_width="39dp"
        android:onClick="onClick"
        android:layout_height="38.5dp"
        android:background="@drawable/ic_endlive_share_instagram"/>

</RelativeLayout>

