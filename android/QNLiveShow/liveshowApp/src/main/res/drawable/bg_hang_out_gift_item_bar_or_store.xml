<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_full" />

            <stroke android:width="1dp" android:color="@color/live_ho_orange_credits" />
        </shape>
    </item>

    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_full" />

            <stroke android:width="2px" android:color="@color/live_ho_grey_gift_stroke" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent_full" />

            <stroke android:width="2px" android:color="@color/live_ho_grey_gift_stroke" />
        </shape>
    </item>
</selector>