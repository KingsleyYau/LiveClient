<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--pressed-->
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="@color/live_ho_orange_deep" />
        </shape>
    </item>

    <!--normal-->
    <item>
        <shape android:shape="oval">
            <!--<stroke android:width="1dp" android:color="@color/transparent_full" />-->
            <stroke android:width="1dp" android:color="@color/text_color_grey" />
        </shape>
    </item>

</selector>