<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/tv_talentName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:textColor="@color/white"
        android:textSize="@dimen/live_size_14sp"
        android:text="talents name" />

    <Button
        android:id="@+id/btn_talentRequest"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/rectangle_rounded_angle_talent_yellow_bg"
        android:textSize="14sp"
        android:gravity="center"
        android:textColor="@color/talent_btn_txt"
        android:text="Request" />

    <TextView
        android:id="@+id/tv_talentCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_talentRequest"
        android:layout_toStartOf="@+id/btn_talentRequest"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/live_size_14sp"
        android:text="credits"
        android:textColor="@color/talent_yellow"/>
</RelativeLayout>
