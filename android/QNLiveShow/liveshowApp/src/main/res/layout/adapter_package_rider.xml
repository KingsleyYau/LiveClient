<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:paddingTop="9dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rectangle_radius8_connor_solid_white_stoke_transparent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/live_size_8dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/ivRidePhoto"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_package_rider_default"/>
            <TextView
                android:id="@+id/tvRideName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:singleLine="true"
                android:ellipsize="end"
                android:textSize="11sp"
                android:textColor="#3c3c3c"/>
            <Button
                android:id="@+id/btnRide"
                android:layout_width="89dp"
                android:layout_height="25dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/rectangle_radius6_ripple_solid_white_stroke_sky_blue"
                android:text="@string/my_package_rider_ride"
                android:textSize="12dp"
                android:textColor="#3c3c3c"
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:textAllCaps="false"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D2D2D2"
            android:layerType="software"
            android:layout_marginTop="@dimen/live_size_8dp"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/tvRiderExpire"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="left"
            android:padding="4dp"
            android:text="@string/my_package_voucher_valid_time_2line"
            android:textColor="@color/gray"
            android:layout_gravity="center_horizontal"
            android:maxLines="2"
            android:textSize="9sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/ivUnread"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:background="@drawable/bg_custom_red_circle"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"/>

</RelativeLayout>
