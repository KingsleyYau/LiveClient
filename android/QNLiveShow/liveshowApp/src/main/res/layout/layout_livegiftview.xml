<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:background="@drawable/bg_liveroom_giftanim_public"
    android:id="@+id/ll_giftItemParentView"
    android:minHeight="40dp">
    <!-- 外部填充 -->
    <LinearLayout
        android:id="@+id/childView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- 显示连击数
    TODO:确认连击动画数字样式-->
    <RelativeLayout
        android:id="@+id/llayout_num"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_x"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/ic_live_gift_anim_number_x"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_0"
            android:layout_toRightOf="@id/img_x"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_1"
            android:layout_toRightOf="@id/img_0"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_2"
            android:layout_toRightOf="@id/img_1"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="1dp"/>

        <ImageView
            android:id="@+id/img_3"
            android:layout_toRightOf="@id/img_2"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="1dp"/>
    </RelativeLayout>
</LinearLayout>
