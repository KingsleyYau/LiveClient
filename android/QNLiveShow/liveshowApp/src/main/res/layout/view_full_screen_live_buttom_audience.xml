<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/iv_freePublicBg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="centerInside"
            android:visibility="gone"
            android:src="@drawable/ic_live_buttom_freepublic_inputbg_1"/>

        <ImageView
            android:id="@+id/iv_freePublicBg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="45dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/ic_live_buttom_freepublic_inputbg_2"/>

        <LinearLayout
            android:id="@+id/ll_bottom_audience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:background="@android:color/transparent"
            android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginLeft="13dp"
                    android:visibility="visible"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="11dp"
                    android:layout_weight="1">

                        <!-- 点击输入 -->
                        <TextView
                            android:id="@+id/tv_inputMsg"
                            android:visibility="visible"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_live_buttom_input_public"
                            android:gravity="center_vertical|left"
                            android:textColor="@android:color/white"
                            android:onClick="onClick"
                            android:textSize="15sp"
                            android:clickable="true"
                            android:paddingLeft="19dp"
                            android:text="@string/live_room_buttom_input" />

                </FrameLayout>

                <!-- 才艺-->
                <ImageView
                    android:id="@+id/iv_talent"
                    android:layout_marginBottom="11dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="9dp"
                    android:background="@drawable/anim_talent_button"
                    android:onClick="onClick" />

                <!-- 礼物 -->
                <ImageView
                    android:id="@+id/iv_gift"
                    android:layout_marginBottom="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="18dp"
                    android:layout_marginLeft="18dp"
                    android:src="@drawable/ic_live_buttom_gift_private"
                    android:onClick="onClick" />

