<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogui_shape_wihte_round_corner"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/dialog_common_multiple_ll_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/live_size_20dp"
            android:layout_marginTop="@dimen/live_size_30dp"
            android:layout_marginRight="@dimen/live_size_20dp"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/dialog_common_multiple_btn_title_icon"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginRight="@dimen/live_size_10dp"
                    android:visibility="gone"/>
                <TextView
                    android:id="@+id/dialog_common_multiple_btn_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:textColor="@color/color_383838"
                    android:textSize="20sp"
                    android:textStyle="bold"/>
            </LinearLayout>

        </RelativeLayout>


        <TextView
            android:id="@+id/dialog_common_multiple_btn_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/live_size_20dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="@dimen/live_size_20dp"
            android:gravity="center_horizontal"
            android:textColor="@color/text_color_grey"
            android:textSize="@dimen/live_size_16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/dialog_common_multiple_btn_sub_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/live_size_20dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="@dimen/live_size_20dp"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:textColor="@color/color_383838"
            android:textSize="@dimen/live_size_16sp"
            android:visibility="gone" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/dialog_common_multiple_btn_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/live_size_12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_dd" />

    <Button
        android:id="@+id/dialog_common_multiple_btn_done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialogui_selector_all_bottom"
        android:gravity="center"
        android:minHeight="48dp"
        android:text="@string/txt_done"
        android:textAllCaps="false"
        android:textColor="@color/dicover_top_tab_txt_big"
        android:textSize="@dimen/live_size_16sp" />
</LinearLayout>