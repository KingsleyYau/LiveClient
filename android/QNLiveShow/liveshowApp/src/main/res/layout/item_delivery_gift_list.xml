<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_gift"
        android:layout_width="@dimen/delivery_gift_size"
        android:layout_height="@dimen/delivery_gift_size" >

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_gift"
            android:layout_width="@dimen/delivery_img_size"
            android:layout_height="@dimen/delivery_img_size"
            android:layout_gravity="center"
            android:layout_margin="@dimen/live_size_2dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </FrameLayout>

</FrameLayout>
