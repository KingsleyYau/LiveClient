<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_carView"
    android:layout_width="wrap_content"
    android:layout_height="34dp"
    android:background="@drawable/bg_entrance_car_master_public"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_carImg"
        android:layout_width="@dimen/liveroom_car_default_width"
        android:layout_height="@dimen/liveroom_car_default_height"
        android:layout_marginLeft="12dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_package_rider_default" />


    <TextView
        android:id="@+id/tv_carMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="4"
        android:singleLine="true"
        android:text="Harrydwedf fewadf "
        android:textColor="#FFFFD205"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_joined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="14dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/liveroom_entrancecar_joined"
        android:textColor="#FFFFD205"
        android:textSize="12sp" />
</LinearLayout>