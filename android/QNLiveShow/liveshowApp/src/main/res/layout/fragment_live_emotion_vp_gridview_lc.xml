<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tiny_grey_solid"
    android:orientation="vertical"
    android:paddingTop="10dp" >

    <TextView
        android:id="@+id/tvEmtionPrice"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="@string/livechat_magicIcon_home_price_desc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <GridView
            android:id="@+id/gvEmotion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:horizontalSpacing="4dp"
            android:listSelector="#00FFFFFF"
            android:numColumns="5"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:scrollbars="none"
            android:verticalSpacing="1dp" />

        <com.qpidnetwork.livemodule.view.MaterialProgressBar
            android:id="@+id/progress"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            wheel:matProg_barColor="@color/blue_color"
            wheel:matProg_progressIndeterminate="true" />
    </RelativeLayout>

</LinearLayout>