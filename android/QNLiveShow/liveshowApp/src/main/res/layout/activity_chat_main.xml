<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme_default_white"
        android:orientation="vertical">

        <com.qpidnetwork.livemodule.framework.widget.viewpagerindicator.TabPageIndicator
            android:id="@+id/tabPageIndicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            custom:digitalHintTextBgColor="#ec6941"
            custom:digitalHintTextColor="@android:color/white"
            custom:digitalHintTextSize="@dimen/live_size_12sp"
            custom:indicatorColor="@color/theme_sky_blue"
            custom:indicatorHeight="2dp"
            custom:red_dot_location="gravity_right_center"
            custom:tabSelectedBgColor="@android:color/transparent"
            custom:tabUnselectedBgColor="@android:color/transparent"
            custom:titleTextColorSelected="@color/live_message_textcolor_black"
            custom:titleTextColorUnselected="@color/live_message_textcolor_gray"
            custom:titleTextSize="@dimen/live_size_16sp"
            custom:isTitleTxtBold="true"
            custom:underlineColor="@color/theme_default_divider_grey"
            custom:underlineHeight="1dp" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPagerContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
