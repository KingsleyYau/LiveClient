<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/live_size_10dp"
        android:background="@drawable/bg_rebate_popupwindow"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/live_talent_note"
            android:textColor="@color/black"
            android:textSize="@dimen/live_size_14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_simpleTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="8dp"
            android:text="@string/live_talent_tips2_details"
            android:textColor="@color/black"
            android:textSize="@dimen/custom_dialog_text_size_simple" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_closeSimpleTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="8dp"
        android:src="@drawable/ic_credits_dialog_close" />
</RelativeLayout>



