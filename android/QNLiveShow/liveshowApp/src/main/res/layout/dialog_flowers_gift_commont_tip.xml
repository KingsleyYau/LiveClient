<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_radius4_white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="34dp"
    android:paddingTop="@dimen/live_size_30dp"
    android:paddingRight="34dp"
    android:paddingBottom="@dimen/live_size_30dp">

    <!-- 这里带 icon 时，分开 2 段文本，是为了 icon 能和文本的居中显示兼容   -->
    <TextView
        android:id="@+id/dialog_flowers_gift_common_tip_tv_title_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_green_successfully"
        android:drawablePadding="@dimen/live_size_6dp"
        android:gravity="center"
        android:textColor="@color/live_text_color_black"
        android:textSize="@dimen/live_size_14sp"
        android:visibility="gone"
        tools:text="This item has been successfully"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/dialog_flowers_gift_common_tip_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/live_text_color_black"
        android:textSize="@dimen/live_size_14sp"
        tools:text="add you cart" />

    <Button
        android:id="@+id/dialog_flowers_gift_common_tip_btn_top"
        style="@style/blueCircle6dpButton"
        android:layout_width="match_parent"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="@dimen/live_size_30dp"
        android:layout_marginRight="0dp"
        tools:text="@string/live_receiver_order_now" />

    <TextView
        android:id="@+id/dialog_flowers_gift_common_tip_btn_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/live_size_16dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/blue_color"
        android:textSize="@dimen/live_size_14sp"
        tools:text="@string/live_receiver_search_by_ID" />
</LinearLayout>