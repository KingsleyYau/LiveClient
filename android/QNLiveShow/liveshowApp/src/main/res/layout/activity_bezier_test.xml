<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text="带测试的圆形，三阶贝塞尔曲线:"/>



        <com.qpidnetwork.livemodule.view.LiveRoomHeaderBezierView
            android:id="@+id/lrhbv_flag"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            custom:bezierXWidth="40dp"
            custom:controllX1="6dp"
            custom:controllY1="0dp"
            custom:controllX2="6dp"
            custom:controllY2="40dp"
            android:visibility="gone"
            custom:roomHeaderBgColor="@android:color/black"
            custom:useThreeOrderBesselCurve="true"
            custom:showTestCirclePath="false"
            />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="不带测试的圆形，三阶贝塞尔曲线:"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:src="@drawable/ic_test_bezier"/>

        <com.qpidnetwork.livemodule.view.LiveRoomHeaderBezierView
            android:id="@+id/lrhbv_flag0"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="144dp"
            android:layout_marginTop="3px"
            custom:bezierXWidth="14dp"
            custom:controllX1="10dp"
            custom:controllY1="1dp"
            custom:controllX2="4dp"
            custom:controllY2="8dp"
            custom:fillAndStroke="false"
            custom:roomHeaderBgColor="@android:color/black"
            custom:useThreeOrderBesselCurve="true"
            custom:showTestCirclePath="false"
            />
    </FrameLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="带测试的圆形，两个1/4圆弧:"/>

    <com.qpidnetwork.livemodule.view.LiveRoomHeaderBezierView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        custom:bezierXWidth="40dp"
        custom:controllX1="6dp"
        custom:controllY1="0dp"
        custom:controllX2="6dp"
        custom:controllY2="40dp"
        android:visibility="gone"
        custom:useThreeOrderBesselCurve="false"
        custom:showTestCirclePath="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="不带测试的圆形，两个1/4圆弧:"/>

    <com.qpidnetwork.livemodule.view.LiveRoomHeaderBezierView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        custom:bezierXWidth="40dp"
        custom:controllX1="6dp"
        custom:controllY1="0dp"
        custom:controllX2="6dp"
        custom:controllY2="40dp"
        custom:useThreeOrderBesselCurve="false"
        custom:showTestCirclePath="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:text="不带测试的圆形，两个1/4圆弧,高度为10dp:"/>

    <com.qpidnetwork.livemodule.view.LiveRoomHeaderBezierView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginLeft="20dp"
        android:visibility="gone"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        custom:useThreeOrderBesselCurve="false"
        custom:showTestCirclePath="false"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="gone"
        android:text="不带测试圆形+两个1/4圆弧,高度为10dp,实际效果:"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_roomHeaderBg"
            android:layout_width="match_parent"
            android:src="@drawable/ic_live_headbg_normalprivate"
            android:scaleType="fitXY"
            android:layout_height="40dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_roomFlag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:visibility="visible"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_live_freepublic"/>

            <com.qpidnetwork.livemodule.view.LiveRoomHeaderBezierView
                android:id="@+id/lrhbv_flag1"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@id/iv_roomFlag1"
                custom:bezierXWidth="14dp"
                custom:controllX1="10dp"
                custom:controllY1="1dp"
                custom:controllX2="4dp"
                custom:controllY2="8dp"
                custom:useThreeOrderBesselCurve="true"
                custom:showTestCirclePath="false"
                custom:fillAndStroke="true"
                custom:roomHeaderBgColor="#cdb4b9"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/lrhbv_flag1"
                android:layout_alignParentRight="true">
                <ImageView
                    android:onClick="onClick"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_live_close_room"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="13dp"
                    />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="三阶贝塞尔曲线控制点1X："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_subControll1X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_controll1XValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_addControll1X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="三阶贝塞尔曲线控制点1Y："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_subControll1Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:text="-"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_controll1YValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_addControll1Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="三阶贝塞尔曲线控制点2X："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_subControll2X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_controll2XValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_addControll2X"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="三阶贝塞尔曲线控制点2Y："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_subControll2Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_controll2YValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_addControll2Y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
    </LinearLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="三阶贝塞尔曲线X轴长度："/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:id="@+id/tv_subLengthX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>
        <TextView
            android:id="@+id/tv_lengthValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:background="@android:color/black"
            android:textColor="@android:color/white"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/tv_addLengthX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:background="@android:color/black"
