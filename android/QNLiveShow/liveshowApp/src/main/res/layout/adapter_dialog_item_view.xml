<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_dd" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/normal_button_height_44dp"
        android:gravity="center"
        android:background="@drawable/dialogui_selector_all_bottom">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/item_icon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginRight="15dp"
                android:src="@drawable/say_hi_dialog_item_wechat" />
            <TextView
                android:id="@+id/item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with Her Now"
                android:textColor="@color/live_message_textsend_item_background_color"
                android:textSize="@dimen/live_size_16sp" />
        </LinearLayout>
    </RelativeLayout>


</LinearLayout>