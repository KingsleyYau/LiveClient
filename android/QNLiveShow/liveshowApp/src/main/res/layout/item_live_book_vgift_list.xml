<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/live_size_70dp"
    android:layout_height="@dimen/live_size_70dp"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/ll_book_gift_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/live_book_gift_item_boder_bg_normal"
        android:padding="2dp">
        <!-- 相片 -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundedCornerRadius="4dp"
            fresco:actualImageScaleType="fitXY"
            fresco:backgroundImage="@color/black4"
            fresco:placeholderImage="@drawable/icon_list_refreash_error" />
    </LinearLayout>



</RelativeLayout>
