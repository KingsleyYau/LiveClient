<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/live_size_80dp"
    android:layout_height="@dimen/live_size_80dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <LinearLayout
        android:id="@+id/ll_book_gift_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rectangle_rounded_angle_gray_bg"
        android:padding="4dp">
        <!-- 相片 -->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_gift"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            fresco:roundTopLeft="true"
            fresco:roundTopRight="true"
            fresco:roundBottomLeft="true"
            fresco:roundBottomRight="true"
            fresco:roundedCornerRadius="4dp"
            fresco:actualImageScaleType="fitXY"
            fresco:backgroundImage="@color/gray"
            fresco:placeholderImage="@drawable/icon_data_empty" />
    </LinearLayout>



</RelativeLayout>
