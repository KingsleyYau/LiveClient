<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llItemContent"
    android:layout_width="@dimen/live_size_48dp"
    android:layout_height="75dp"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/flImageContent"
        android:layout_width="@dimen/live_size_48dp"
        android:layout_height="@dimen/live_size_48dp">

        <ImageView
            android:id="@+id/item_live_virtual_gift_iv_icon_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_live_virtual_gift_selector" />

        <ImageView
            android:id="@+id/item_live_virtual_gift_iv_icon"
            android:layout_width="@dimen/live_size_30dp"
            android:layout_height="@dimen/live_size_30dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:src="@drawable/ic_virtual_gift_small" />

        <ImageView
            android:id="@+id/item_live_virtual_gift_iv_tag_advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|top"
            android:visibility="gone"
            tools:visibility="visible"
            android:src="@drawable/ic_live_buttom_gift_advance" />
    </FrameLayout>

    <TextView
        android:id="@+id/item_live_virtual_gift_tv_credits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/live_credits"
        android:textSize="9sp"
        android:layout_marginTop="2dp"
        android:textColor="@color/live_ho_orange_credits"
        android:singleLine="true"
        android:ellipsize="end"
        />
</LinearLayout>