<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/live_size_8dp"
    android:layout_marginBottom="@dimen/live_size_8dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="179dp"
        android:layout_height="102dp">

        <ImageView
            android:id="@+id/videoCover"
            android:layout_width="175dp"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:src="@color/black4" />

        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_livechat_video_play" />

    </FrameLayout>


    <TextView
        android:id="@+id/videoTitle"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/live_size_14sp" />
</LinearLayout>