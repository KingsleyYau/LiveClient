<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/white"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="13dp">

    <ImageView
        android:id="@+id/adapter_home_broadcast_room_item_iv_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/anim_room_broadcasting" />

    <TextView
        android:id="@+id/adapter_home_broadcast_room_item_tv_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:textColor="@color/text_color_black1"
        android:textSize="13sp"
        android:text="@string/main_broadcast_item_public_broadcast_desc" />

</LinearLayout>
