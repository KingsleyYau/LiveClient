<?xml version="1.0" encoding="utf-8"?><!--付费公开直播间-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="right"
    android:paddingLeft="12dp"
    android:paddingTop="8dp"
    android:paddingRight="12dp"
    android:paddingBottom="8dp"
    android:visibility="visible">

    <com.qpidnetwork.anchor.view.CircleImageHorizontScrollView
        android:id="@+id/cihsv_onlineVIPPublic"
        android:layout_width="match_parent"
        android:layout_height="@dimen/live_room_header_height"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/ll_vipGuest"
        android:scrollbars="none"
        custom:horizontSpace="@dimen/live_room_header_man_icon_space"
        custom:itemWidth="@dimen/live_room_header_man_icon_size" />

    <LinearLayout
        android:id="@+id/ll_vipGuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="2dp">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:gravity="center"-->
<!--            android:text="@string/liveroom_vipguest"-->
<!--            android:textColor="@color/public_liveroom_audience_current"-->
<!--            android:textSize="12sp" />-->

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_guest"/>

        <TextView
            android:id="@+id/tv_vipGuestData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:text="@string/liveroom_header_vipguestdata"
            android:textColor="@color/public_tran_txt_color"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>
