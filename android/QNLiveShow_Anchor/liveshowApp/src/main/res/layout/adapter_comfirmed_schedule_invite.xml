<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="70dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="13dp">
        <com.qpidnetwork.anchor.framework.widget.circleimageview.CircleImageView
            android:id="@+id/civAnchorPhoto"
            android:layout_width="51dp"
            android:layout_height="51dp"
            android:src="@drawable/ic_default_photo_man"
            android:visibility="visible"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/tvAnchorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="12sp"/>
            <TextView
                android:id="@+id/tvBookTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="11sp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llCountDown"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginRight="28dp"
                android:layout_marginLeft="28dp"
                android:text="@string/schedule_invite_starting_in_tips"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/tvLeftTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="3dp"
                android:textColor="#297af3"
                android:textSize="15sp"/>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rlStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="13dp"
            android:visibility="gone">
            <!--TODO:样式修改-->
            <com.qpidnetwork.anchor.view.ProgressButton
                android:id="@+id/btnStartProcess"
                android:textSize="12sp"
                android:layout_width="74dp"
                android:layout_height="29dp"
                android:focusable="false"
                android:textColor="@android:color/white"
                android:text="@string/schedule_invite_confirmed_start_tips"
                android:layout_centerVertical="true"
                app:progressColor="#297af3"
                app:progressBgColor="#bfbfbf"
                app:buttonNormalColor="#bfbfbf"
                app:buttonPressedColor="#297af3"
                app:buttonCornerRadius="4dp"
                app:showProgressNum="false"
                android:background="@null"
                android:textAllCaps="false"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivUnread"
        android:layout_width="7dp"
        android:layout_height="7dp"
        android:background="@drawable/bg_custom_red_circle"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="9dp"/>
</FrameLayout>
