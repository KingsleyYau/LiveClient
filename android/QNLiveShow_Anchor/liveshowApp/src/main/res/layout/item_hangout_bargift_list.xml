<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_gravity="bottom"
        android:background="@drawable/bg_hangout_bargift_listitem">

        <com.qpidnetwork.anchor.framework.widget.circleimageview.CircleImageView
            android:id="@+id/civ_barGiftImg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_default_gift"
            />
    </FrameLayout>

    <TextView
        android:id="@+id/tv_barGiftCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9"
        android:textSize="9sp"
        android:gravity="center"
        android:background="@drawable/bg_hangout_bargift_listitem_count"
        android:textColor="@android:color/white"
        android:layout_marginBottom="22dp"
        android:layout_gravity="right"
        />
</FrameLayout>
