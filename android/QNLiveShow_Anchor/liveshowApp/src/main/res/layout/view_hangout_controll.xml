<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--礼物控制区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:background="#6b6b6b"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_switchCelebGiftAnim"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:background="#303F9F"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/switch_1bataianim_open"/>

            </LinearLayout>
            <!--推流控制区域-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:gravity="center_vertical"
                >
                <Button
                    android:id="@+id/button5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mute"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/button6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rotate"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/button7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StartCam"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />
                <Button
                    android:id="@+id/button8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="StopCam"
                    android:layout_weight="1"
                    android:textAllCaps="false"
                    />
            </LinearLayout>

            <!--控制四个窗格流程区域-->
            <!--第一个窗格，主播自己-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_toInvite1"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:clickable="true"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:onClick="onClick"
                    android:text="待邀请1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_inviting1"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:onClick="onClick"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="邀请中1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_invited1"
                    android:clickable="true"
                    android:textColor="@android:color/white"
                    android:onClick="onClick"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:text="视频流1"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_anim1"
                    android:clickable="true"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="礼物动画1"/>
            </LinearLayout>
            <!--第二个窗格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_toInvite2"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:text="待邀请2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_inviting2"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="邀请中2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_invited2"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="视频流2"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_anim2"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="礼物动画2"/>
            </LinearLayout>
            <!--第3个窗格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_toInvite3"
                    android:textColor="@android:color/white"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="待邀请3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="#303F9F"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:padding="5dp"
                    android:id="@+id/tv_inviting3"
                    android:textColor="@android:color/white"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="邀请中3"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_invited3"
                    android:background="#303F9F"
                    android:textColor="@android:color/white"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="视频流1"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_anim3"
                    android:background="#303F9F"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="礼物动画3"/>
            </LinearLayout>
            <!--第4个窗格-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_toInvite4"
                    android:background="#303F9F"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:text="待邀请4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_inviting4"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="#303F9F"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="邀请中4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_invited4"
                    android:clickable="true"
                    android:background="#303F9F"
                    android:padding="5dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="视频流4"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_anim4"
                    android:background="#303F9F"
                    android:textColor="@android:color/white"
                    android:padding="5dp"
                    android:clickable="true"
                    android:onClick="onClick"
                    android:gravity="center"
                    android:text="礼物动画4"/>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>
