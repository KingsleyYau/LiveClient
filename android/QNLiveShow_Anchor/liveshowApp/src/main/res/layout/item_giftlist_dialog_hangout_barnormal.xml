<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_columnWeight="1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:id="@+id/ll_giftItem"
        android:layout_gravity="center"
        android:layout_height="match_parent"
        android:gravity="center_horizontal|bottom">

        <ImageView
            android:id="@+id/iv_giftIcon"
            android:layout_marginTop="14dp"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_gravity="top|center_horizontal"
            android:src="@drawable/ic_default_gift"
            android:gravity="center_horizontal"
            android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tv_giftCount"
            android:textSize="10sp"
            android:textColor="@color/custom_dialog_txt_color_simple"
            android:singleLine="true"
            android:layout_marginBottom="9dp"
            android:gravity="center_vertical"
            android:ellipsize="end"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_rightGiftFlag"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:visibility="gone"
        android:layout_gravity="right|top"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_live_buttom_gift_advance" />

    <ProgressBar
        android:id="@+id/pb_loadAdvanceAnimFile"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:visibility="gone"
        android:scrollbarStyle="insideInset"
        android:indeterminateDrawable="@drawable/live_loading_progress"
        android:indeterminateBehavior="repeat"
        android:indeterminateDuration="1000"
        style="?android:attr/progressBarStyleSmallInverse"/>
</FrameLayout>