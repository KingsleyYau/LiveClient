<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.qpidnetwork.livemodule.liveshow.login.LiveEmailSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="37dp"
        android:background="@android:color/white"
        android:orientation="vertical">

        <com.qpidnetwork.livemodule.framework.widget.MaterialTextField
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.qpidnetwork.livemodule.framework.widget.MaterialTextField
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="37dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/email_sign_up_devide"
            android:textSize="9sp"
            android:layout_marginTop="10dp"
            android:text="@string/live_sign_up_et_tips2_enter_password"/>

        <!--宽度高度最好不要写死，以适配各种机型-->
        <Button
            android:id="@+id/btn_submit"
            android:text="@string/live_sign_up"
            android:textColor="@color/submit_unusable"
            android:enabled="false"
            style="@style/CustomTheme.Btn.Submit"
            />

    </LinearLayout>

</LinearLayout>
