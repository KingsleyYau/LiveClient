<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/transparent"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_prompt"
        android:src="@drawable/ic_live_tariff_prompt_indicat"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:layout_width="6dp"
        android:layout_height="6dp" />

    <LinearLayout
        android:id="@+id/ll_tariffMsg"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/bg_tariff_prompt_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_triffMsg"
            android:layout_gravity="center_horizontal"
            android:gravity="left"
            android:layout_width="match_parent"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="7dp"
            android:textSize="9sp"
            android:textAlignment="gravity"
            android:textColor="#5a5a5a"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="58dp"
            android:layout_height="17dp"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="8dp"
            android:text="@string/liveroom_tariff_prompt_ok"
            android:textSize="10sp"
            android:gravity="center"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/bg_covermanager_use"/>

    </LinearLayout>



</LinearLayout>
