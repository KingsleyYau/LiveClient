<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <!--头像-->
        <LinearLayout
            android:id="@+id/ll_userPhoto"
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:clickable="true"
            android:onClick="onClick"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_photoStatus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:visibility="visible"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:text="@string/profile_photo_status"/>

            <com.qpidnetwork.livemodule.framework.widget.circleimageview.CircleImageView
                android:id="@+id/civ_currPhoto"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:src="@drawable/ic_default_photo_man"
                android:layout_marginRight="12dp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right_arrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/personal_item_devide"/>

        <!--ID-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="12sp"
                android:text="@string/profile_id"/>
            <TextView
                android:id="@+id/tv_userId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/profile_item_value"
                android:textSize="12sp"
                android:text="123456"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/personal_item_devide"/>

        <!--NickName-->
        <LinearLayout
            android:id="@+id/ll_nickname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:clickable="true"
            android:onClick="onClick"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_nickNameStatus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:singleLine="true"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="12sp"
                android:text="@string/profile_nickname"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical|right">
                <TextView
                    android:id="@+id/tv_nickName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/profile_item_value"
                    android:textSize="12sp"
                    android:maxEms="6"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:layout_marginRight="10dp"
                    android:text=""/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1px"
                    android:src="@drawable/ic_right_arrow"/>
            </LinearLayout>


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/personal_item_devide"/>

        <!--Gender-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="12sp"
                android:text="@string/profile_gender"/>
            <TextView
                android:id="@+id/tv_gender"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/profile_item_value"
                android:textSize="12sp"
                android:text="@string/live_edit_profile_female"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/personal_item_devide"/>

        <!--Birthday-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/custom_dialog_txt_color_btn_no"
                android:textSize="12sp"
                android:text="@string/profile_birthday"/>
            <TextView
                android:id="@+id/tv_birthday"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:textColor="@color/profile_item_value"
                android:textSize="12sp"
                android:text="1985 - 06 - 12"/>/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:background="@color/personal_item_devide"/>
    </LinearLayout>

    <include
        android:id="@+id/view_errLoad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/live_layout_error_page"
        android:visibility="gone"
        />

</FrameLayout>


