<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical">


    <TextView
        android:id="@+id/tv_talentName"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/live_size_14sp"
        android:lines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/tv_talentCredits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/live_size_14sp"
        android:textColor="@color/talent_yellow"
        android:layout_marginLeft="4dp"/>

    <TextView
        android:id="@+id/tv_talentRequest"
        android:layout_width="63dp"
        android:layout_height="25dp"
        android:background="@drawable/rectangle_rounded_angle_talent_yellow_bg"
        android:textSize="14sp"
        android:gravity="center"
        android:textStyle="normal"
        android:textColor="@color/talent_btn_txt"
        android:text="@string/live_talent_request" />

</LinearLayout>
