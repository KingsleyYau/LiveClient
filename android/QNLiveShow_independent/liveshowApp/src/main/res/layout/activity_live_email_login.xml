<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:button="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.qpidnetwork.livemodule.liveshow.login.LiveEmailSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/live_size_16dp"
        android:background="@color/white"
        android:orientation="vertical">

        <com.qpidnetwork.livemodule.framework.widget.MaterialTextField
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.qpidnetwork.livemodule.framework.widget.MaterialTextField
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/live_size_16dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black3"
            android:textSize="@dimen/live_size_12sp"
            android:text="@string/live_sign_up_et_tips2_enter_password"/>


        <com.qpidnetwork.livemodule.view.ButtonRaised
            android:id="@+id/btn_Summit"
            android:layout_width="@dimen/live_size_140dp"
            android:layout_height="@dimen/live_size_40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/live_size_16dp"
            android:layout_marginTop="@dimen/live_size_30dp"
            button:background="@color/login_violet"
            button:title="@string/live_login"
            button:title_color="@color/white"
            button:touch_feedback="@drawable/touch_feedback_holo_light_round_rectangle" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/live_size_16dp">

            <TextView
                android:id="@+id/tv_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/live_forgot_password"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/tv_sing_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="@string/live_sign_up"
                android:textColor="@color/black" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
