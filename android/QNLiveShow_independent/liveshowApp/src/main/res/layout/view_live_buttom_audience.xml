<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="bottom"
    android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/iv_freePublicBg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/ic_live_buttom_freepublic_inputbg_1"/>

        <ImageView
            android:id="@+id/iv_freePublicBg2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="45dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:src="@drawable/ic_live_buttom_freepublic_inputbg_2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_gravity="bottom"

            android:background="@android:color/transparent"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_inputMsg"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_live_buttom_input_normalprivate"
                    android:gravity="center_vertical"
                    android:onClick="onClick"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="13dp" />
                
                <ImageView
                    android:id="@+id/iv_liveRoomShare"
                    android:visibility="gone"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="9dp"
                    android:onClick="onClick"
                    android:src="@drawable/ic_liveroom_share_freepublic"/>
                
                <ImageView
                    android:id="@+id/iv_talent"
                    android:layout_marginBottom="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:layout_marginLeft="15dp"
                    android:src="@drawable/ic_liveroom_talent"
                    android:onClick="onClick" />
                        
                <FrameLayout
                    android:id="@+id/fl_recommendGift"
                    android:layout_width="41dp"
                    android:layout_height="41dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/live_buttomrecommgift_leftmargin_advanceprv">
                        <ImageView
                            android:id="@+id/iv_recommendGift"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="fitCenter"
                            android:layout_margin="2dp"
                            android:src="@drawable/ic_default_gift"
                            android:onClick="onClick" />

                        <ImageView
                            android:id="@+id/iv_recommGiftFloat"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_recomgift_float_normalprv"
                            android:onClick="onClick" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/iv_gift"
                    android:layout_marginBottom="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:layout_marginRight="13dp"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/ic_liveroom_buttom_gift_advanceprv"
                    android:onClick="onClick" />

        </LinearLayout>
</FrameLayout>
