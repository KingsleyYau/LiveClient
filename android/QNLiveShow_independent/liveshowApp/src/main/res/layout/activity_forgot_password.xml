<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.qpidnetwork.livemodule.liveshow.login.LiveEmailSignUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/live_forgot_pw_tips"
            android:textSize="15sp"
            android:lineSpacingExtra="0dp"
            android:textColor="@color/custom_dialog_txt_color_simple"/>

        <com.qpidnetwork.livemodule.framework.widget.MaterialTextField
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"/>

        <RelativeLayout
            android:layout_marginTop="37dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.qpidnetwork.livemodule.framework.widget.MaterialTextField
                android:id="@+id/et_ver_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/img_ver_code"
                android:layout_width="80dp"
                android:layout_height="27dp"
                android:layout_marginBottom="6dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <!--宽度高度最好不要写死，以适配各种机型-->
        <Button
            android:id="@+id/btn_submit"
            android:text="@string/live_next"
            android:textColor="@color/submit_unusable"
            android:enabled="false"
            style="@style/CustomTheme.Btn.Submit"
            />

    </LinearLayout>

</LinearLayout>
