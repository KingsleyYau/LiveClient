<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="40dp">
    <!-- 外部填充 -->
    <LinearLayout
        android:id="@+id/childView"
        android:layout_marginLeft="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

    </LinearLayout>

    <!-- 显示连击数 -->
    <RelativeLayout
        android:id="@+id/llayout_num"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/childView">

        <ImageView
            android:id="@+id/img_x"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_live_gift_anim_number_x"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_0"
            android:layout_toRightOf="@id/img_x"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_1"
            android:layout_toRightOf="@id/img_0"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:layout_marginRight="1dp"
            android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/img_2"
            android:layout_toRightOf="@id/img_1"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="1dp"/>

        <ImageView
            android:id="@+id/img_3"
            android:layout_toRightOf="@id/img_2"
            android:layout_centerVertical="true"
            android:layout_width="16dp"
            android:layout_height="23dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="1dp"/>
    </RelativeLayout>
</RelativeLayout>
