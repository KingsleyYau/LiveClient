<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <Button
        android:id="@+id/btn_controlLive"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:onClick="onClick"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_live_buttom_livecontrol"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_showInputView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:onClick="onClick"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/ic_live_buttom_show_input_view"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_hostShare"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_toLeftOf="@+id/btn_controlLive"
        android:layout_centerVertical="true"
        android:onClick="onClick"
        android:background="@drawable/ic_live_buttom_share_gray"
        android:textAllCaps="false"/>

</RelativeLayout>
