platform :ios, '8.0'

#使用动态连接
#use_frameworks!

def shared_pods
	pod 'GPUImage', '0.1.7'
	pod 'AFNetworking', '3.0.4'
	pod 'SDWebImage', '4.1.0'
	pod 'Masonry', '0.6.4'
	pod 'YYText', '1.0.7'
	pod 'SDWebImage/WebP'
end

target 'livestream' do
	shared_pods
	#pod 'MobileVLCKit', '2.2.2'
end

target 'livestream_sdk' do
	shared_pods
end